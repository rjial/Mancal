<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigasiActivity">
    <com.mapbox.maps.MapView
        android:id="@+id/mapViewNavigasi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#55BEC2"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter_bold"
                            android:text="Waktu Perjalanan"
                            android:layout_marginBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#242424"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/txtWaktuPerjalananNavigasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter_bold"
                            android:text="30:00:00"
                            android:layout_alignParentStart="true"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="16dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_columnWeight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#55BEC2"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter_bold"
                            android:text="Akumulasi Harga"
                            android:layout_marginBottom="4dp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#242424"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/txtAkumulasiHargaNavigasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter_bold"
                            android:text="30:00:00"
                            android:layout_alignParentStart="true"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>
            <Button
                android:id="@+id/btnSelesaiNavigasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button"
                android:src="@drawable/custom_button"
                android:minHeight="50dp"
                style="@style/Theme.AppCompat.DayNight"
                android:text="Selesai"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_margin="10dp"
                >
            </Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <com.mapbox.navigation.ui.maneuver.view.MapboxManeuverView
        android:id="@+id/maneuverViewNavigasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.mapbox.navigation.ui.maps.camera.view.MapboxRouteOverviewButton
        android:id="@+id/routeOverviewNavigasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/maneuverViewNavigasi" />
    <com.mapbox.navigation.ui.maps.camera.view.MapboxRecenterButton
        android:id="@+id/recenterNavigasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/routeOverviewNavigasi" />


</androidx.constraintlayout.widget.ConstraintLayout>