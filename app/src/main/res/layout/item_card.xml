<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_item"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtNamaTempatVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STIKI Lounge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/txtAddressVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl. Tidar 666"
        app:layout_constraintTop_toBottomOf="@id/txtNamaTempatVenue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtAddressVenue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/bicycle"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/txtBicycleCountVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:fontFamily="@font/inter"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/imgPanahVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/panah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>