<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:background="@drawable/custom_input"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/txttanggalriwayat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2 April 2022"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="17.47 WIB"
                android:layout_marginLeft="30dp"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/done"
                android:text="Selesai"
                android:layout_marginLeft="120dp">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/txtlokasiriwayat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/Vector1"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:text="Jl. Candi 3E">
        </TextView>
        <TextView
            android:id="@+id/txtlokasiriwayat2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/Vector2"
            android:drawablePadding="10dp"
            android:text="STIKI Malang">
        </TextView>

    </LinearLayout>



</androidx.cardview.widget.CardView>